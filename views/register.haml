%h2 Create An Account
%form{:action => '/register', :method => 'post', :id => 'user-form',class: 'form-horizontal'}
    .form-group
        %dl
            %dt
                %label{:for => 'username'} Username
            %dd
                %input{:type => 'text', :name => 'username', :id => 'username_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'fullname'} Full Name
            %dd
                %input{:type => 'text', :name => 'fullname', :id => 'fullname_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'email'} Email
            %dd
                %input{:type => 'text', :name => 'email', :id => 'email_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'password'} Password
            %dd
                %input{:type => 'password', :name => 'password', :id => 'password_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'password_confirm'} Re-enter Password
            %dd
                %input{:type => 'password', :name => 'password_confirm', :id => 'password_confirm_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'address'} Address
            %dd
                %input{:type => 'text', :name => 'address', :id => 'address_input'}
    .form-group
        %dl
            %dt
                %label{:for => 'dob'} D.O.B
            %dd
                %input{:type => 'date', :name => 'dob', :id => 'dob_input'}
    .form-group
        %input{:type => 'submit', :id => 'registration-form-submit', :class => 'btn btn-default', :value => 'submit'}
