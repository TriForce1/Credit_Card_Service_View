%h2 Validate Your Credit Card
%form{:action => '/validate', :method => 'get', :id => 'validate-form', class: 'form-horizontal'}
    .form-group
        %dl
            %dt
                %label{:for => 'card_number'} Credit Card Number
            %dd
                %input{:type => 'text', :name => 'card_number', :id => 'card_number_input'}
    .form-group
        %input{:type => 'submit', :id => 'validation-form-submit', :class => 'btn btn-default', :value => 'submit'}
-if @body
    = @body      
