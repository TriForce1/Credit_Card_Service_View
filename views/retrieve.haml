%h2 Retrieved Credit Card Info
%p
  = "#{@current_user.username}'s Stored Credit Cards"
-if @cards
  %table{class: 'over table', :border => '1'}
    %tbody
      %tr{class: 'rows'}
        %th{class: 'rows'} Owner's Name
        %th{class: 'rows'} Expiration Date
        %th{class: 'rows'} Number
        %th{class: 'rows'} Credit Card Network
        %th{class: 'rows'} Date Created
      -@cards.each do |card|
        %tr
          %td{class: 'rows'}
            = card['owner']
          %td{class: 'rows'}
            = card['expiration']
          %td{class: 'rows'}
            = card['number']
          %td{class: 'rows'}
            = card['network']
          %td{class: 'rows'}
